<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_inner_item"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeight"
    android:background="#00695c"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    >
    <TextView
        android:id="@+id/category_view"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:elevation="15dp"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textColor="#FFFFFF" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end">

        <ImageView
            android:id="@+id/category_name_edit_pencil"
            android:layout_width="?listPreferredItemHeight"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_pencil"
            android:layout_gravity="center_vertical|end" />

        <RelativeLayout
            android:id="@+id/partition2"
            android:layout_width="wrap_content"
            android:layout_height="?listPreferredItemHeight">

            <ImageView
                android:id="@+id/parent_list_item_expand_arrow"
                android:layout_width="?listPreferredItemHeight"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@android:drawable/arrow_down_float"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:id="@+id/handle"
                android:layout_width="?listPreferredItemHeight"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|end"
                android:scaleType="center"
                android:src="@drawable/ic_reorder_grey_500_24dp"
                android:layout_toRightOf="@id/parent_list_item_expand_arrow"
                android:layout_toEndOf="@id/parent_list_item_expand_arrow"
                />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:background="#000000" />


</FrameLayout>